%% BLOCparallel to optimize 20 x 20 dim modified griewank function
        
M = 20;
objFun = @(C) modified_griewank(C);
 
% Generating random starting point
rand_seed = 404;
C0 = randCorrMatrix(M, rand_seed);

% Setting BLOC options
options.MaxRuns =  20;
options.phi = 10^(-10);
options.MaxIter = 1000;

% Run BLOC
