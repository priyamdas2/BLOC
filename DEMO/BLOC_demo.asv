clearvars;
warning('off', 'all');
addpath('./BLOC/');

%% BLOC (non-parallel) to optimize 10 x 10 dim modified ackley function

M = 10;
objFun = @(C) modified_ackley(C);
 
% Generating random starting point
rand_seed = 2025;
C0 = randCorrMatrix(M, rand_seed);

% Setting BLOC options
options.MaxRuns = 5;
options.MaxTime = 20; % (in seconds)

% Run BLOC
[C_BLOC, fval_BLOC, comp_time_BLOC] = BLOC(objFun, C0, options);

% Print final solution

